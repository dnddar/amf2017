@charset "utf-8";

* {	margin: 0; padding: 0}

 

body{font-size:16px; font-family:"微軟正黑體", "新細明體",Verdana, Geneva, sans-serif }	
	
color_blue {color:#064b82;}
color_blue2 {color:#00a0ea;}


header{ position:fixed; height:100px; background:rgba(0,0,0,0.7); width:100%; z-index:100;}


ul, li{ list-style:none;}

.clear{ clear:both}

.clearfix:before,
.clearfix:after {
  content: "";
  display: table;
}
.clearfix:after {
  clear: both;
}
.clearfix {
  *zoom: 1; /*For IE 6&7 only*/
}

